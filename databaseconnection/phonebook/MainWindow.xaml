<Window x:Class="phonebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
    <UniformGrid DockPanel.Dock="Top" Columns="4">
        
            <Label>
                id
            </Label>
            <TextBox Name="id"></TextBox>
        </UniformGrid>
        <UniformGrid DockPanel.Dock="Top" Columns="4">
            <Label>name</Label>
            <TextBox Name="name"></TextBox>
            
        </UniformGrid>
        <UniformGrid DockPanel.Dock="Top" Columns="4">
            <Label>mobileno</Label>
            <TextBox Name="mobileno"></TextBox>
            
        </UniformGrid>
        <UniformGrid DockPanel.Dock="Top">
            <Button Width="45" Click="Button_Click">submit</Button>
        </UniformGrid>
        <UniformGrid DockPanel.Dock="Top">
            
        </UniformGrid>
    </DockPanel>
</Window>
